@using MeretTune.ViewModels
@model AlbumSong

@{
    ViewBag.Title = "Create Album";
    Layout = "_Layout";
}

<h2>title</h2>
<div class="container w-100 h-100">
    <div class="d-flex row justify-content-center align-items-center">
        <div class="col-xl-9">
            <form class="form-outline" method="post" enctype="multipart/form-data" asp-controller="CMS" asp-action="CreateAlbumPost">
                <div class="d-flex form-outline mb-5 ms-5 mt-5 flex-row me-auto justify-content-center w-100">
                    <input type="file" style="display: none" accept="image/png, image/jpeg" onchange="handleFiles(this.files)" id="imageInput" name="imageFile"/>
                    <img id="account-controls-profile-image" width="256" height="256"/>
                    <label for="imageInput" class="btn btn-dark btn-outline-secondary ms-5 mt-lg-5 h-25">Select Image File</label>
                    <!--<input type="text" class="d-inline-flex text-center text-white border-bottom-2 p-0 ms-0 me-0 border-white border-0 bg-dark w-100 mt-2 p-0" style="font-size: 24px;" name="AlbumCover" required/>-->
                </div>
                <hr class="ms-xl-5 mx-lg-1" style="height: 3px;"/>
                <div class="d-inline-flex form-outline ms-lg-4 my-4 align-items-center w-100">
                    <label for="AlbumName" class="form-label pe-3 col-3">Album Name: </label>
                    <input type="text" id="AlbumName" class="form-control form-control-lg col rounded-pill text-white text-center bg-dark" name="AlbumName" required/>
                </div>
                <div class="d-inline-flex form-outline ms-lg-4 my-4 align-items-center w-100">
                    <label for="ProducerName" class="form-label pe-3 col-3">Producer Name: </label>
                    <input type="text" id="ProducerName" class="form-control form-control-lg col rounded-pill text-white text-center bg-dark" name="ProducerName" required/>
                </div>
                <div class="d-inline-flex form-outline ms-lg-4 my-4 align-items-center w-100">
                    <label for="Price" class="form-label pe-3 col-3">Price (In Npr):</label>
                    <input type="text" id="Price" class="form-control form-control-lg col rounded-pill text-white text-center bg-dark" name="price" required/>
                </div>
                <div class="d-flex form-outline ms-lg-4 my-4 align-items-center w-100">
                    <label for="ArtistGuid">Artist Guid</label>
                    <input type="text" id="ArtistGuid" class="form-control ms-3 form-control-lg col rounded-pill text-white text-center bg-dark" name="ArtistGuid" required/>
                </div>
                <div class="flex-row">
                    <button type="submit" class="btn btn-outline-secondary m-auto">Submit</button>    
                </div>
            </form>
        </div>
    </div>
</div>